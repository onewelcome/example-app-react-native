<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pin_key_1"
            style="@style/PinKeyboardKeyButtonStyle"
            android:text="1"/>

        <Button
            android:id="@+id/pin_key_2"
            style="@style/PinKeyboardKeyButtonStyle"
            android:text="2"/>

        <Button
            android:id="@+id/pin_key_3"
            style="@style/PinKeyboardKeyButtonStyle"
            android:text="3"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pin_key_4"
            style="@style/PinKeyboardKeyButtonStyle"
            android:text="4"/>

        <Button
            android:id="@+id/pin_key_5"
            style="@style/PinKeyboardKeyButtonStyle"
            android:text="5"/>

        <Button
            android:id="@+id/pin_key_6"
            style="@style/PinKeyboardKeyButtonStyle"
            android:text="6"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pin_key_7"
            style="@style/PinKeyboardKeyButtonStyle"
            android:text="7"/>

        <Button
            android:id="@+id/pin_key_8"
            style="@style/PinKeyboardKeyButtonStyle"
            android:text="8"/>

        <Button
            android:id="@+id/pin_key_9"
            style="@style/PinKeyboardKeyButtonStyle"
            android:text="9"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            style="@style/PinKeyboardKeyButtonStyle"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/pin_key_0"
            style="@style/PinKeyboardKeyButtonStyle"
            android:text="0"/>

        <ImageButton
            android:id="@+id/pin_key_del"
            style="@style/PinKeyboardKeyButtonStyle"
            android:scaleType="center"
            android:src="@drawable/ic_backspace"
            android:visibility="invisible"
            tools:visibility="visible"/>
    </TableRow>

</TableLayout>